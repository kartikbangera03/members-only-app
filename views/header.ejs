<div class="header">
    <div class="headerContainer">
        <div class="logoHeading"><a href="/">Welcome to the Club</a></div>

        <% if (user) {%>
            <div class="headerRight">
                <div class="greenHighlightDiv"><a href="/create-message">Create New Message</a></div>
                <% if (!user.member && !user.admin) {%>
                    <div class="blueHighlightDiv"><a href="/join-club">Become A Member</a></div>
                <% } %>
                <div><a href="/log-out">Log Out</a><div class="userLoginStatus"><%= user.firstname + " " +user.lastname%></div></div>
            </div>
            
        <% } else {%>
            <div class="headerRight">
                <div class="greenHighlightDiv"><a href="/sign-up">Sign Up</a></div>
                <div><a href="/log-in">Log In</a></div>
            </div>
        <% } %>

    </div>
    
    
</div>